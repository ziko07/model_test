<%= content_for :page_header do %>
    <%= content_for :page_header do %>
        <div class="breadcrumb flat">
          <%= link_to 'Home', admin_exams_path %>
          <%= link_to @exam.title, admin_exam_path(@exam) %>
          <a href="javascript:void(0);" class="active"> <%= @exam.description %> </a>
        </div>
    <% end %>
<% end %>

<div class="col-lg-12 clearfix">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Subject List
      </div>
      <div class="panel-body">
        <% if @subject_lists.present? %>
            <ul>
              <% @subject_lists.each do |list| %>
                  <li>
                    <%= link_to admin_exam_subject_path(list.exam_id, list.id) do %>
                        <i class="fa fa-book"> </i>
                        <%= list.title %>
                    <% end %>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Create New Subject
      </div>
      <div class="panel-body">
        <div class="new-question">
          <%= form_for @subject, url: admin_exam_subjects_path(@exam) do |f| %>
              <div class="form-group">
                <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
              </div>
              <div class="form-group">
                <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
              </div>
              <div class="actions">
                <%= f.submit class: 'btn btn-success' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>



